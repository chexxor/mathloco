---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/schedule', label: 'Schedule' },
  { href: '/chat', label: 'Chat' },
  { href: '/contact', label: 'Contact' },
  { href: '/members', label: 'Members' }
];
---

<header class="bg-white shadow-sm">
  <nav class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-2xl font-bold text-blue-600">Minneapolis Math Book Club</a>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          {navItems.map(item => (
            <a
              href={item.href}
              class="inline-flex items-center px-1 pt-1 text-gray-900 hover:text-blue-600"
              aria-label={`Navigate to ${item.label}`}
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>
